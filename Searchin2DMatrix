class Solution {
    public boolean searchMatrix(int[][] matrix, int target) {
        int m=matrix.length;
        int n=matrix[0].length;
        boolean flag = false;
        
            int low=0, high=n-1;
            while(low<m && high>=0)
            {
                
                if(target== matrix[low][high])
                {
                    return true;
                }
                else if(target< matrix[low][high])
                {
                    high--;
                }
                else
                {
                    low++;
                }
            }
        return false;
        
        
    }
}
//Reduce the Time Complexity and think about that
//O(M+N)
